<Window x:Class="Streaming_Muesic_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Streaming_Muesic_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox Header="WASAPI" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="168">
            <Grid HorizontalAlignment="Left" Height="379" Margin="10,10,-2,-12" VerticalAlignment="Top" Width="148">
                <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Width="50" Click="Btn_Start_Click"/>
                <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="65,69,0,0" VerticalAlignment="Top" Width="50" Click="Btn_Stop_Click" IsEnabled="False"/>
                <ProgressBar x:Name="pbLeft" HorizontalAlignment="Left" Height="173" Margin="23,111,0,0" VerticalAlignment="Top" Width="24" RenderTransformOrigin="0.5,0.5" Orientation="Vertical" Maximum="1" SmallChange="0.001"/>
                <ProgressBar x:Name="pbRight" HorizontalAlignment="Left" Height="173" Margin="78,111,0,0" VerticalAlignment="Top" Width="24
                             " RenderTransformOrigin="0.5,0.5" Orientation="Vertical" Maximum="1" SmallChange="0.001"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Philips Hue" HorizontalAlignment="Left" Height="399" Margin="558,10,0,0" VerticalAlignment="Top" Width="224">
            <Grid HorizontalAlignment="Left" Height="379" Margin="10,10,-2,-12" VerticalAlignment="Top" Width="204">
                <TextBox x:Name="tbIP" HorizontalAlignment="Left" Height="23" Margin="85,41,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="109"/>
                <TextBox x:Name="tbKey" HorizontalAlignment="Left" Height="23" Margin="85,82,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="109"/>
                <Label Content="IP Addr." HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top"/>
                <Label x:Name="Key" Content="Label" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.026,-2.74"/>
                <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Connect_Click"/>
                <Button x:Name="btnScan" Content="Search" HorizontalAlignment="Left" Margin="119,126,0,0" VerticalAlignment="Top" Width="75"/>
                <ListBox x:Name="lbLights" HorizontalAlignment="Left" Height="208" Margin="10,161,0,0" VerticalAlignment="Top" Width="184"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
